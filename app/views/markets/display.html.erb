<h3> All Markets </h3>

<table>
  <% @markets.collect do |market| %>
      <tr>
        <td>
          <a href ="/markets/<%=market.id%>"> <%= market.name %> </a>
        </td>
        <td>
          <% if @vendor%>
            <% if @vendor.market_id == market.id %>
              (This is your market!)
            <% else %>
              <form action= "/markets/<%=market.id%>" method="POST">
                <input type="submit" value="Set As My Market"/>
              </form>
            <% end %>
          <% end %>
        </td>
    </tr>
  <% end %>
</table>

<% if @vendor != nil %>
  <a href="/markets/new">Add a Market</a>
<% end %>
