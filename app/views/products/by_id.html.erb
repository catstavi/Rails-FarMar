<h3><%= @product.name %> </h3>

<p> Vendor: <%= @this_vendor.name %> </p>
Sales: <% @sales.collect do |sale| %>
        <p>
        Amount: $ <%= sale.amount %>, Purchase Date: <%=sale.purchase_time%>
        </p>
        <% end %>

<% if @product.vendor_id == @vendor.id %>
  <p>
    <button>
      <a href ="/products/<%=@product.id%>/edit"> Edit </a>
    </button>

    <button>
      <a href ="/products/<%=@product.id%>/sales/new"> Add a Sale </a>
    </button>

    <form action= "/products/<%=@product.id%>" method="POST">
      <input type ="hidden" name="_method" value="DELETE"/>
      <input type="submit" value="Delete"/>
    </form>
  </p>
<% end %>
